
<% @author.posts.each do |p|%>
	<div class = "post">
		<h4><%= p.title %></h4>
		<p><%= p.body %></p>
	</div>
<%end%>

<% form_for @post, url_for(:posts, :create, :author_id => @author.id) do |form|%>

<% field_set_tag do %>
		<%= form.label :title %>
	  <%= form.text_field :title%>

		<%= form.label :body %>
	  <%= form.text_field :body %>

	<%end%>

	<%= form.submit "Post"%>
<%end%>